@model IEnumerable<PhotowalaWebsite.Models.Image>

<div class="row" id="slider">
    <div class="col-md-4">
        <figure>
            <div class="grids d-flex c-content-between col-md-12">
                @foreach (var items in Model)
                {

                    <img class="img-fluid vh-100 wv-50 row  col-md" src="@items.ImagePath" alt="" />

                }
                </div>
        </figure>
    </div>
</div>

<style>
    @@keyframes slidy {
        0% {
            left: 0%;
        }

        20% {
            left: 0%;
        }

        25% {
            left: -100%;
        }

        45% {
            left: -100%;
        }

        50% {
            left: -200%;
        }

        70% {
            left: -200%;
        }

        75% {
            left: -300%;
        }

        95% {
            left: -300%;
        }

        100% {
            left: -400%;
        }
    }

    body {
        margin: 0;
    }

    div#slider {
        overflow: hidden;
         border-image-repeat:repeat;
    }

        div#slider figure img {
            width: 100%;
            float: left;
        }

        div#slider figure {
            position: relative;
            width: 100%;
            margin: 0;
            left: 0;
            text-align: left;
            font-size: 0;
            animation: 30s slidy infinite;
           
            
        }
</style>