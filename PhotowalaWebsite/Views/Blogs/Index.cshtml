@model IEnumerable<PhotowalaWebsite.Models.Blog>

@{
    ViewBag.Title = "Index";
    Layout = null;
}


<table class="table table-bordered" id="blogtable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Discription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LogDiscription)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th></th>
        </tr>
    </thead>
   
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                <img src="@item.Image" style="width:80px; height:80px;" class="figure-img img-fluid" />

            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Discription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LogDiscription)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.BlogID }) |
                @Html.ActionLink("Details", "Details", new { id = item.BlogID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.BlogID })
            </td>
        </tr>
        }
    </tbody>

    <tfoot></tfoot>
</table>
